.adapter_item {
  padding-left: 22rpx;
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}

.item_img {
  width: 240rpx;
  height: 160rpx;
}

.item_content {
  width: 0rpx;
  height: 160rpx;
  padding-right: 20rpx;
  margin-left: 22rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  flex: 1;
}

.item_id {
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  vertical-align: middle;
  color: #333;
}

.item_title {
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  vertical-align: middle;
  display: table-cell;
}