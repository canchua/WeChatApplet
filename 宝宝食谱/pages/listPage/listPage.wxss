.adapter_item {
  display: flex;
  flex-direction: row;
}

.item_img {

  width: 146px;
  height: 73px;
  margin-left: 15px;
  margin-top: 9px;
  margin-bottom: 9px;
  border-radius: 5px;
}

.item_content {

  height: 81px;
  padding-right: 15px;
  margin-left: 15px;
  display: flex;
  flex-direction: column;
  flex: 1;
  width:calc(100% - 176px);
  box-sizing:border-box;

}
.itemLine{
  width: calc(100% - 30px );
  height: 1px;
  background-color: #EEEEEE;
  margin-left: 15px;
}
.item_id {
  height: 31px;
  width: 100%;
  line-height: 25px;
  vertical-align: top;
  margin-top: 9px;
  font-size: 17px;
  font-style: PingFangSC;
  color: #333333;
  overflow:hidden;

text-overflow:ellipsis;

white-space:nowrap;
}

.item_title {
  height: 45px;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 20px;
  font-size: 13px;
  font-style: PingFangSC;
  color: #999999;
  display:block;
  white-space: pre-line;
  text-align: left;
}