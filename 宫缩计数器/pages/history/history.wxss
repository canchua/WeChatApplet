  background: #F3F2F2;
}
.tableMessage{
  /* height: calc(297 / 603 * 100% - 50px); */
  /* height: 247px; */
  height: calc(100% - 45px);
  overflow: hidden;
  background: #F3F2F2;
}

.tableDate{
  height: 39px;
  background: #F3F2F2;
  color: #999;
  font-family: PingFangSC;
  font-size: 16px;
  font-weight: 600;
  display: flex;
  flex-direction: row;
  align-content: flex-start;
}

.dateText{
  margin-top: 9px;
  margin-left: 15px;
}



.tableRow{
  height: 45px;
  width: 92%;
  margin-left: 4%;
  display: flex;
  flex-direction: column;
  font-family: PingFangSC;
  font-weight: 500;
  font-size: 16px;
  justify-content: space-between;
  background: #fff;
  border-radius: 5px;
}

.tableRowText{
  height: 31px;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-content: flex-start;
  /* align-items: flex-start */
  /* margin-top: calc(17 / 603 * 100%);
  margin-bottom: calc(12 / 603 * 100%); */
  margin-top: 7px;
  /* text-align: center; */
  justify-content: space-between;
  align-content: center;
}

.firstCol{
  align-self: center;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: center;
}


.box{
  align-self: center;
  height: 15px;
  width: 4px;
  background: #FF6969;
  margin-left: 0px;
}

.col{
  width: 1px;
  height: 100%;
  background: #D8D8D8;
}

.tableColumn1{
  height: 23px;
  width: 67px;
  margin-left: 15px;
  color: #666;
}

.tableColumn2{
  align-self: center;
  height: 31px;
  width: 58px;
  font-size: 22px;
  font-weight: 500px;
  color: #FF6969;
}

.tableColumn3{
  align-self: center;
  height: 23px;
  width: 46px;
  margin-right: 30px;
  color: #666;
}



